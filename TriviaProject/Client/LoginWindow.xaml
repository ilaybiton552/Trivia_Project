<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="LoginWindow" Height="500" Width="450">
    <Grid Background="#8AAAE5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Ready for some Trivia?" FontSize="30" TextAlignment="Center" FontFamily="Berlin Sans FB" Foreground="#FFFFFF" />
            <TextBlock Text="Login:" FontSize="35" TextAlignment="Center" FontFamily="Berlin Sans FB" Foreground="White"/>
        </StackPanel>

        <Canvas Grid.Row="1">
            <TextBlock Canvas.Left="60" Canvas.Top="25" Text="Username:" FontSize="30" FontFamily="Berlin Sans FB Demi" Foreground="#FFFFFF"/>
            <TextBox x:Name="usernameTextBox" Text="{Binding username, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="30" Canvas.Left="200" FontSize="25" FontFamily="Berlin Sans FB Demi" Width="200" Foreground="#8AAAE5"/>
            <TextBlock Canvas.Left="60" Canvas.Top="125" Text="Password:" FontSize="30" FontFamily="Berlin Sans FB Demi" Foreground="White"/>
            <TextBox x:Name="passwordTextBox" Text="{Binding password, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="130" Canvas.Left="200" FontSize="25" FontFamily="Berlin Sans FB Demi" Width="200" Foreground="#8AAAE5"/>
        </Canvas>

        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Content="Login" Height="50" Width="75" FontSize="30" FontFamily="Berlin Sans FB Demi" Margin="10" Click="LoginClick" Background="White" Foreground="#8AAAE5"/>
                <Button Content="Clear" Height="50" Width="75" FontSize="30" FontFamily="Berlin Sans FB Demi" Margin="10" Click="ClearClick" Background="White" Foreground="#8AAAE5"/>
            </StackPanel>
            <TextBlock Text="--Sign up--" TextAlignment="Center" Foreground="#FF0E2144" FontSize="25" Margin="0, 0, 0, 10" MouseDown="SignUpClick" FontFamily="Berlin Sans FB"/>
        </StackPanel>

    </Grid>
</Window>
